<h1>New picture</h1>

<% form_for @picture, :url => account_pictures_url, :html => { :multipart => true } do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :picture %>* :<br/>
    <%= f.file_field :uploaded_data  %><br/>
    <span class="hint">
      <small>We accept JPEG, GIF, or PNG files up to 500 KB.</small>
    </span>
  </p><br/>

  <p>
    <%= f.label :title %> :<br />
    <%= f.text_field :title %>
  </p><br/>
  
  <p>
    <%= f.label :description %> :<br />
    <%= f.text_area :description %>
  </p><br/>
  <p>
    <%= f.submit 'Create' %> | <%= link_to 'Back', account_pictures_path %>
  </p>
<% end %>

