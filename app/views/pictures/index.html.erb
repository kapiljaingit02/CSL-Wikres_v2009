<h1>Listing pictures</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
  </tr>

<% @pictures.each do |picture| %>
  <tr>
    <td><%=h picture.name %></td>
    <td><%=h picture.description %></td>
    <td><%= link_to 'Show', picture %> |
        <%= link_to 'Edit', edit_picture_path(picture) %> | 
        <%= link_to 'Destroy', picture, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New picture', new_picture_path %>