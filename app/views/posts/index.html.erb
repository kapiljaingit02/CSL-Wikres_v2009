<%= @test %>
<h1>Listing posts</h1>

<% unless @posts.count == 0 %>
<table id="table-style-a">
  <thead>
  <tr>
    <th>Title</th>
    <th>User</th>
    <th>Summary</th>
    <th>Published?</th>
    <th>Published at</th>
    <th>Actions</th>
  </tr>
  </thead>
  <tbody>
    
<% @posts.each do |post| %>
  <tr>
    <td><%=h post.title %></td>
    <td><%=h post.user.username %></td>
    <td><%=h post.summary %></td>
    <td><%= check_box_tag "published", "" , true, :disabled => true  %></td>
    <td><%=h post.published_at %></td>
    <td><%= link_to 'Show', post %>
  </tr>
<% end %>
  </tbody>
</table>

<br />
<% else %>
  <p>No post available.</p>
<% end %>