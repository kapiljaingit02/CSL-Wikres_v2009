<% if @total == 0 %>
<p>No items found...</p>
<% else %>
<p><b><%= @total %> Users found.</b></p>

<table id="table-style-a">
  <thead>
    <tr>
      <th></th>
      <th>Username</th>
      <th>Fullname</th>
      <% if logged_in_user %>
      <th>Related friends</th>
      <th>Friendship</th>
      <% end %>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% for user in @users %>
      <tr>
        <td><%= avatar_for(user) %></td>
        <td><%=h user.username.capitalize %></td>
        <td><%=h user.fullname %></td>
        <% if logged_in_user %>
          <td><%= logged_in_user.related_friends_count(user) unless logged_in_user.id == user.id %></td>
          <td><%=  get_friendship(logged_in_user, user) %></td>
        <% end %>
        <td><%= link_to "Show", profile_url(user.id) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate @users %>

<% end %>