<%= on_title "New weblog" %>

<% form_for @weblog, :url => account_weblogs_path do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :public %> :
    <%= f.check_box :public %>
  </p><br/>
  <p>
    <%= f.label :name %> :<br />
    <%= f.text_field :name %>
  </p><br />
  <p>
    <%= f.label :description %> :<br />
    <%= f.text_area :description %>
  </p><br />

  <p>
    <%= f.submit 'Create' %> | <%= link_to 'Back', account_weblogs_path %>
  </p><br />
  
<% end %>

